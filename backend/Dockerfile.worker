FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src
RUN mvn -q -DskipTests package

FROM eclipse-temurin:17-jre
WORKDIR /app
COPY --from=build /app/target/payment-gateway-0.1.0.jar app.jar
ENV SPRING_PROFILES_ACTIVE=worker
ENTRYPOINT ["java","-cp","/app/app.jar","com.gateway.WorkerApplication","--spring.profiles.active=worker"]
